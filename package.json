{
  "name": "smoothalert-pro",
  "version": "2.0.0",
  "description": "The Ultimate JavaScript Library for Modern Alerts and Notifications",
  "main": "dist/smoothalert.js",
  "module": "dist/smoothalert.esm.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "npm run build:webpack && npm run build:rollup",
    "build:webpack": "webpack --mode production",
    "build:rollup": "rollup -c",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir types",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "serve": "http-server dist -p 8080",
    "prepublishOnly": "npm run build && npm run test",
    "size": "bundlesize"
  },
  "keywords": [
    "alert",
    "modal",
    "notification",
    "toast",
    "dialog",
    "popup",
    "glassmorphism",
    "typescript",
    "javascript",
    "ui",
    "ux"
  ],
  "author": "SmoothAlert Pro Team",
  "license": "MIT",
  "homepage": "https://smoothalert.pro",
  "repository": {
    "type": "git",
    "url": "https://github.com/smoothalert/smoothalert-pro.git"
  },
  "bugs": {
    "url": "https://github.com/smoothalert/smoothalert-pro/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "babel-loader": "^9.1.3",
    "bundlesize": "^0.18.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "html-webpack-plugin": "^5.5.3",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.1.0",
    "rollup": "^4.5.0",
    "rollup-plugin-filesize": "^10.0.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "bundlesize": [
    {
      "path": "./dist/smoothalert.min.js",
      "maxSize": "50 kB"
    }
  ],
  "engines": {
    "node": ">=16.0.0"
  }
} 